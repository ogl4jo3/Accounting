<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:padding="4dp"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<LinearLayout
		android:id="@+id/ll_daily_alarm"
		android:layout_marginTop="2dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">

		<TextView
			style="@style/TextStyle.f6"
			android:text="@string/tv_daily_alarm"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="2dp">

			<TextView
				android:id="@+id/tv_daily_alarm_hour"
				style="@style/TextStyle.f5"
				android:text="22"/>

			<TextView
				style="@style/TextStyle.f5"
				android:text=":"/>

			<TextView
				android:id="@+id/tv_daily_alarm_minute"
				style="@style/TextStyle.f5"
				android:text="30"/>

		</LinearLayout>

		<Switch
			android:id="@+id/sw_daily_alarm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"/>
	</LinearLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rv_accounting_notification"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="8dp"
		android:layout_weight="1"/>

	<Button
		android:id="@+id/btn_new"
		style="@style/Normal_btn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/btn_new"/>

</LinearLayout>

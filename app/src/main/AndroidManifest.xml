<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ogl4jo3.accounting">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.ogl4jo3.accounting.AccountingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ogl4jo3.accounting.InitActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
			android:name="com.ogl4jo3.accounting.useteaching.UseTeachingActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar" />
		<activity
			android:name="com.ogl4jo3.accounting.MainActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="adjustPan" />

        <receiver android:name="com.ogl4jo3.accounting.setting.accountingnotification.AccountingAlarmReceiver" />
        <receiver android:name="com.ogl4jo3.accounting.setting.accountingnotification.AccountingDailyAlarmReceiver" />
    </application>

</manifest>